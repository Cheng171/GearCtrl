            android:targetClass="com.easydroid.romctrl.zhagan"/>
    </Preference-->   

     <Preference
        android:title="开发人员选项"
        android:icon="@drawable/ic_userguide"
        android:summary="更多有利于开发者调试软件的选项">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.DevSet"/>
    </Preference>   
    <Preference
        android:title="多用户"
        android:icon="@drawable/ic_account_list"
        android:summary="允许创建多个手机分身，设置多个不同的手机用户">
        <intent
            android:targetPackage="com.android.settings"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.android.settings.Settings$UserSettingsActivity"/>
    </Preference>
     <Preference
        android:title="定时开关机"
        android:icon="@drawable/ic_app_lock"
        android:summary="为系统自动开机和关机指定时间">
        <intent
            android:targetPackage="com.miui.securitycenter"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.miui.powercenter.bootshutdown.PowerShutdownOnTime"/>
    </Preference>   
    <Preference
        android:title="LCD分辨率调节"
        android:icon="@drawable/ic_infinity_display_settings"
        android:summary="调整屏幕的分辨率和密度(谨慎设置以防翻车)">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.LCDFix"/>
    </Preference>

     <Preference
        android:title="电池校准"
        android:icon="@drawable/ic_oldman_mode_settings"
        android:summary="清空电池使用数据来校准电池">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.BatFix"/>
    </Preference>   
</PreferenceScreen>
