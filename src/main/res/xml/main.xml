<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="GearMagic™附加设置"
    			android:gravity="center">    
   <PreferenceCategory android:title="实用功能" />  
       <Preference
        android:title="高级重启"
        android:icon="@drawable/ic_account_autostar"
        android:summary="标准重启,热重启,重启到REC或Fastboot">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.Reboot"/>
    </Preference>

    <Preference
        android:title="Wi-Fi 密码查看"
        android:icon="@drawable/ic_wifi_settings"
        android:summary="查看已连接过的 Wi-Fi 的密码">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.WifiView"/>
    </Preference>
    <!--Preference
        android:title="双击唤醒"
        android:icon="@drawable/ic_edge_mode_settings"
        android:summary="屏幕关闭时双击屏幕唤醒手机">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.wake"/>
    </Preference>
    <Preference
        android:title="电量内外显"
        android:icon="@drawable/ic_second_space"
