     <Preference
        android:title="应用冻结"
        android:icon="@drawable/ic_do_not_disturb_mode_settings"
        android:summary="应用太耗电 ? 不如「冻」起来 ! ">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.Freeze"/>
    </Preference>   

    <Preference
        android:title="处理器调节"
        android:icon="@drawable/ic_xspace"
        android:summary="调整处理器频率，开启核心数，调节器等">
        <intent
            android:targetPackage="com.easydroid.romctrl"
            android:action="android.intent.action.MAIN"
            android:targetClass="com.easydroid.romctrl.CpuSetV2"/>
    </Preference>
